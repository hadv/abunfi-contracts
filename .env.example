# Abunfi Contracts Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PRIVATE KEYS (NEVER COMMIT REAL PRIVATE KEYS TO VERSION CONTROL)
# =============================================================================
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# =============================================================================
# RPC ENDPOINTS
# =============================================================================

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_ALCHEMY_KEY
# Alternative: https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Sepolia Testnet (Primary testnet for deployment)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
# Alternative: https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Arbitrum
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
ARBITRUM_GOERLI_RPC_URL=https://arb-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Polygon
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
MUMBAI_RPC_URL=https://polygon-mumbai.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Optimism
OPTIMISM_RPC_URL=https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
OPTIMISM_GOERLI_RPC_URL=https://opt-goerli.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# =============================================================================
# ETHERSCAN API KEYS (for contract verification)
# =============================================================================
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
OPTIMISTIC_ETHERSCAN_API_KEY=YOUR_OPTIMISTIC_ETHERSCAN_API_KEY

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Network-specific RPC URLs for deployment scripts
TESTNET_RPC_URL=${SEPOLIA_RPC_URL}
MAINNET_RPC_URL=${ETHEREUM_RPC_URL}

# Gas configuration
MAX_GAS_PRICE=50000000000  # 50 gwei
MAX_PRIORITY_FEE=2000000000  # 2 gwei

# =============================================================================
# PROTOCOL ADDRESSES (for production deployments)
# =============================================================================

# Ethereum Mainnet Protocol Addresses
MAINNET_USDC=0xA0b86a33E6441E6C8C7F1C7C8C7F1C7C8C7F1C7C
MAINNET_AAVE_POOL=0x87870Bca3F3fD6335C3F4ce8392D69350B4fA4E2
MAINNET_AAVE_DATA_PROVIDER=0x7B4EB56E7CD4b454BA8ff71E4518426369a138a3

# Sepolia Testnet Protocol Addresses
SEPOLIA_AAVE_POOL=0x6Ae43d3271ff6888e7Fc43Fd7321a503ff738951
SEPOLIA_AAVE_DATA_PROVIDER=0x3e9708d80f7B3e43118013075F7e95CE3AB31F31

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Strategy allocation weights (basis points, total should be 10000)
AAVE_STRATEGY_WEIGHT=4000      # 40%
COMPOUND_STRATEGY_WEIGHT=3500  # 35%
LIQUID_STAKING_WEIGHT=2500     # 25%

# Risk scores (0-100, lower is safer)
AAVE_RISK_SCORE=15
COMPOUND_RISK_SCORE=20
LIQUID_STAKING_RISK_SCORE=35

# Allocation limits (basis points)
MAX_STRATEGY_ALLOCATION=6000   # 60%
MIN_STRATEGY_ALLOCATION=1000   # 10%

# Initial funding amounts (for testing)
INITIAL_USDC_MINT=10000000000000  # 10M USDC (6 decimals)
TEST_USER_FUNDING=10000000000     # 10K USDC per test user

# =============================================================================
# MONITORING AND ALERTS
# =============================================================================

# Discord webhook for deployment notifications (optional)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# Slack webhook for deployment notifications (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_SLACK_WEBHOOK

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Multi-sig wallet addresses (for production)
MULTISIG_OWNER=0x0000000000000000000000000000000000000000
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# Emergency pause settings
EMERGENCY_PAUSE_ENABLED=true
EMERGENCY_CONTACT=your-email@example.com

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# IPFS settings for metadata
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
PINATA_API_KEY=YOUR_PINATA_API_KEY
PINATA_SECRET_KEY=YOUR_PINATA_SECRET_KEY

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Fork testing
FORK_BLOCK_NUMBER=18500000  # Specific block for consistent testing
FORK_RPC_URL=${ETHEREUM_RPC_URL}

# Test accounts (for local testing only)
TEST_ACCOUNT_1=0x1234567890123456789012345678901234567890
TEST_ACCOUNT_2=0x2345678901234567890123456789012345678901
TEST_ACCOUNT_3=0x3456789012345678901234567890123456789012

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Local development
LOCAL_RPC_URL=http://localhost:8545
ANVIL_FORK_URL=${ETHEREUM_RPC_URL}

# Debugging
DEBUG_MODE=false
VERBOSE_LOGGING=true

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit your actual .env file to version control
# 2. Use different private keys for different networks
# 3. Keep mainnet and testnet configurations separate
# 4. Regularly rotate API keys and private keys
# 5. Use hardware wallets for mainnet deployments
# 6. Test thoroughly on testnets before mainnet deployment
