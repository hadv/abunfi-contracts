{
  "name": "@abunfi/contracts",
  "version": "1.0.0",
  "description": "Smart contracts for the Abunfi micro-savings platform",
  "main": "index.js",
  "scripts": {
    "build": "forge build",
    "test": "forge test",
    "test:coverage": "forge coverage",
    "test:gas": "forge test --gas-report",
    "format": "forge fmt",
    "format:check": "forge fmt --check",
    "export-abis": "node scripts/export-abis.js",
    "deploy:local": "forge script script/Deploy.s.sol --rpc-url http://localhost:8545 --broadcast",
    "deploy:testnet": "forge script script/Deploy.s.sol --rpc-url $TESTNET_RPC_URL --broadcast --verify",
    "deploy:mainnet": "forge script script/Deploy.s.sol --rpc-url $MAINNET_RPC_URL --broadcast --verify",
    "deploy:sepolia": "forge script script/DeploySepolia.s.sol:DeploySepolia --rpc-url $SEPOLIA_RPC_URL --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY -vvvv",
    "deploy:sepolia:script": "./scripts/deploy-sepolia.sh",
    "deploy:eip7702": "forge script script/DeployEIP7702.s.sol:DeployEIP7702 --rpc-url $SEPOLIA_RPC_URL --broadcast --verify --etherscan-api-key $ETHERSCAN_API_KEY -vvvv",
    "verify:sepolia": "forge verify-contract --chain-id 11155111 --etherscan-api-key $ETHERSCAN_API_KEY",
    "test:sepolia": "forge test --fork-url $SEPOLIA_RPC_URL -vvv",
    "security:slither": "slither .",
    "security:mythril": "myth analyze src/ --solc-json foundry.toml"
  },
  "files": [
    "src/",
    "out/",
    "exports/",
    "foundry.toml",
    "README.md"
  ],
  "keywords": [
    "solidity",
    "smart-contracts",
    "defi",
    "yield-farming",
    "foundry",
    "abunfi"
  ],
  "author": "Abunfi Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hadv/abunfi-contracts.git"
  },
  "devDependencies": {
    "fs-extra": "^11.1.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
